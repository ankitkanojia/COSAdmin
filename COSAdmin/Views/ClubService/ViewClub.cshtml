@model List<ClubMaster>


@{
    ViewBag.Title = "View Club";
    string imgPath = "/Upload/Club/";
}

<h2>View Service Category</h2>


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>View Club</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Dashboard")">Home</a>
            </li>
            <li class="active">
                <strong>View Club</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">
                    @*START: CONTENT HERE*@
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <td>Image</td>
                                <td>Club Name</td>
                                <td>Description</td>
                                <td>Creted Date</td>
                                <td>Edit</td>
                                <td>Delete</td>
                            </tr>
                        </thead>


                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>

                                        <img class="img-thumbnail" style="max-width:80px" src="@imgPath@item.ClubImage " />
                                    </td>
                                    <td>
                                        @item.ClubName
                                    </td>
                                    <td>
                                        @item.Description
                                    </td>
                                    <td>
                                        @item.CreatedDate.ToString("dd-MM-yyyy tt")
                                    </td>
                                    <td>
                                        <a href="@Url.Action("AddClub", "ClubService", new { id = item.ClubMasterID})"> Edit </a>
                                    </td>
                                    <td>
                                        <a onclick="deleteClub(@item.ClubMasterID)"> Delete </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @*END: CONTENT HERE*@
                </div>

            </div>
        </div>
    </div>


</div>




@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}



@section Scripts {
    @Scripts.Render("~/plugins/jeditable")
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">

        function deleteClub(id) {
            $.ajax({
                type: "GET",
                dataType: "json",
                url: '@Url.Action("DeleteClub", "ClubService")',
                data: { ClubMasterID: id },
                success: function (data) {
                    location.reload();
                },
                error: function () { alert('Unexpected Error Occur'); }
            });
        }


        $(document).ready(function () {

            $('.dataTables-example').dataTable({
                "dom": 'T<"clear">lfrtip',
                "tableTools": {
                    "sSwfPath": "../scripts/plugins/dataTables/swf/copy_csv_xls_pdf.swf"
                }
            });
        });
    </script>
}
