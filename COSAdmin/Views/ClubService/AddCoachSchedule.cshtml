
@model CoachSchedule




<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Add CoachSchedule</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Dashboard")">Home</a>
            </li>
            <li class="active">
                <strong>Add CoachSchedule</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                @using (Html.BeginForm("AddCoachSchedule", "ClubService", FormMethod.Post, new { @id = "frmRegistration", enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(s => s.CoachScheduleID)
                    <div class="ibox-content">
                        @*START: CONTENT HERE*@


                        <div class="row">
                            <div class="col-md-6">
                                <label>Start Time<span class="text-danger">*</span> </label>
                                <div class="input-group clockpicker" data-autoclose="true">
                                    @Html.TextBoxFor(s => s.StartTime, new { @class = "form-control", @placeholder = "Enter Starting Time" })
                                    <span class="input-group-addon">
                                        <span class="fa fa-clock-o"></span>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label>End Time<span class="text-danger">*</span> </label>
                                <div class="input-group clockpicker2" data-autoclose="true">
                                    @Html.TextBoxFor(s => s.EndTime, new { @class = "form-control", @placeholder = "Enter Ending Time" })
                                    <span class="input-group-addon">
                                        <span class="fa fa-clock-o"></span>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label> IsActive <span class="text-danger">*</span> </label>
                                    @Html.CheckBoxFor(s => s.IsActive)
                                </div>
                            </div>
                        </div>



                        <hr />

                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class=" btn btn-success">Submit</button>
                                <button type="button" class=" btn btn-default">Cancle</button>
                            </div>
                        </div>
                        @*END: CONTENT HERE*@
                    </div>

                }


            </div>
        </div>
    </div>


</div>

@section Styles {
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
    @Styles.Render("~/plugins/clockpickerStyles")



}

@section Scripts {
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/clockpicker")






    <script type="text/javascript">
        $(document).ready(function () {

            $('.clockpicker').clockpicker();

            $('.clockpicker2').clockpicker();

            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });

        });
    </script>
}