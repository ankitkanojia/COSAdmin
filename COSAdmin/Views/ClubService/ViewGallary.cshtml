@model List<ViewGallaryMasterVM>
@{
    ViewBag.Title = "ViewGallary";

}

<h2>ViewGallary</h2>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>View Gallary</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Dashboard")">Home</a>
            </li>
            <li class="active">
                <strong>View Gallary</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">
                    @*START: CONTENT HERE*@
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <td>Service Name</td>
                                <td>Image</td>
                                <td>Created Date</td>
                                <td>Active</td>
                                <td>Delete</td>
                            </tr>
                        </thead>


                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ServiceName</td>
                                    <td>@item.Image</td>

                                    <td>@item.CreatedDate.ToString("dd-MM-yyyy")</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <p>Yes</p>
                                        }
                                        else
                                        {
                                            <p>No</p>
                                        }

                                    </td>
                                    <td>
                                        <a onclick="deleteGallary(@item.GallaryMasterID)"> Delete </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @*END: CONTENT HERE*@
                </div>

            </div>
        </div>
    </div>


</div>




@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}



@section Scripts {
    @Scripts.Render("~/plugins/jeditable")
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        function deleteGallary(id) {
            $.ajax({
                type: "GET",
                dataType: "json",
                url: '@Url.Action("deleteGallary", "ClubService")',
                data: { GallaryMasterID: id },
                success: function (data) {
                    location.reload();
                },
                error: function () { alert('Unexpected Error Occur'); }
            });
        }
        $(document).ready(function () {

            $('.dataTables-example').dataTable({
                "dom": 'T<"clear">lfrtip',
                "tableTools": {
                    "sSwfPath": "../scripts/plugins/dataTables/swf/copy_csv_xls_pdf.swf"
                }
            });
        });
    </script>
}