@model PayuResponse


@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/UserPanel/Views/Shared/_Layout.cshtml";
}

<!-- CONTENT + SIDEBAR -->
<div class="main-wrapper clearfix">
    <div class="site-pagetitle jumbotron">
        <div class="container text-center">
            <h3>Payment for your membership fees</h3>

        </div>
    </div>
    <div class="container theme-container">
        <main id="main-content" class="main-container" itemprop="mainContentOfPage" itemscope="itemscope">
            <article itemscope="itemscope" itemprop="blogPost">
                <!-- Main Content of the Post -->
                <div class="entry-content" itemprop="articleBody">
                    <div class="woocommerce checkout">
                        @using (Html.BeginForm("Payment", "HomeUser", FormMethod.Post, new { @id = "frmLogin" }))
                        {
                            <div class="col2-set clearfix" id="customer_details">
                                <div class="col-1 col-lg-6 col-sm-6 border">
                                    <h4 class="cart-title-highlight title-3">Payment for your membership fees</h4>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Amount To Pay</label>
                                                @Html.TextBoxFor(s => s.amount, new { @class = "form-control", @readonly = "readonly" })


                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>First Name</label>
                                                @Html.TextBoxFor(s => s.firstName, new { @class = "form-control" })
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Last Name</label>
                                                @Html.TextBoxFor(s => s.lastname, new { @class = "form-control" })
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Email Address</label>
                                                @Html.TextBoxFor(s => s.email, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Mobile Number</label>
                                                @Html.TextBoxFor(s => s.phone, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Address</label>
                                                @Html.TextBoxFor(s => s.address1, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Land mark</label>
                                                @Html.TextBoxFor(s => s.address2, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>City</label>
                                                @Html.TextBoxFor(s => s.city, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>State</label>
                                                @Html.TextBoxFor(s => s.state, new { @class = "form-control" })
                                            </div>
                                        </div>


                                        <div class="col-md-6">
                                            <button type="submit" class="btn btn-warning"> PayUMoney Payment</button>
                                        </div>

                                    </div>
                                </div>

                            </div>

                        }

                        <br /><br />
                    </div>
                </div>
            </article>
        </main>
    </div>


</div>
